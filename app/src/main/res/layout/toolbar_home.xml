<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tbHome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_constraintTop_toTopOf="parent"
    >

    <com.sutech.photoeditor.widget.text.TextViewArt
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_toStartOf="@+id/btnSettingHome"
        android:layout_toEndOf="@id/ivRemoveAds"
        android:text="@string/app_name"
        android:textSize="27sp" />

    <ImageView
        android:id="@+id/ivRemoveAds"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_iap_pro"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/btnSettingHome"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_8sdp"
        app:srcCompat="@drawable/ic_setting_home"
        android:layout_marginEnd="@dimen/_12sdp"
        android:contentDescription="@string/app_name" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#D3D1D1"
        android:visibility="gone"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
