<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/border_radius__dark_grey_10"
    android:paddingTop="15.0dip"
    android:paddingBottom="10.0dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/pinch"
        android:layout_width="200.0dip"
        android:layout_height="250.0dip"
        android:src="@drawable/ic_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:src="@drawable/finger_draw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/text_color_edit"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw to splash"
        app:layout_constraintBottom_toTopOf="@id/pinch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:textSize="14.0sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_gravity="end|center"
        android:id="@+id/btnDone"
        android:background="@drawable/piclist_selector_btn_done"
        android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="15.0dip"
        android:text="Got It"
        android:paddingStart="30.0dip"
        android:paddingEnd="30.0dip"
        android:layout_marginEnd="15.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pinch" />
</androidx.constraintlayout.widget.ConstraintLayout>