<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_14sdp"
    android:layout_marginStart="@dimen/_12sdp"
    android:paddingHorizontal="@dimen/_6sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/imgNewMenu"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg_circle_new"
        android:layout_toEndOf="@+id/imgItemMenu"
        android:contentDescription="@string/app_name"
        app:tint="@color/red" />

    <ImageView
        android:id="@+id/imgItemMenu"
        android:layout_width="@dimen/_34sdp"
        android:layout_height="@dimen/_34sdp"
        app:tint="#404040"
        android:padding="@dimen/_8sdp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name" />

    <com.sutech.photoeditor.widget.text.TextViewSemiBold
        android:id="@+id/tvNameItemMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#404040"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_10ssp"
        android:text="@string/app_name"
        android:layout_below="@+id/imgItemMenu" />
</RelativeLayout>